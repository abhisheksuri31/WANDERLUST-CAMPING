<% layout("LAYOUTS/boilerplate")%>

<div class="row">
  <h1 class="text-center">NEW CAMPGROUND</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="customvalidatemyform"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">TITLE</label>
        <input
          class="form-control"
          type="text"
          id="title"
          name="title"
          required
        />
        <div class="invalid-feedback">ðŸ™„</div>
        <div class="valid-feedback">LOOKS GOOD !</div>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">LOCATION</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="location"
          required
        />
        <div class="invalid-feedback">ðŸ™„</div>
        <div class="valid-feedback">LOOKS GOOD !</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">CAMPGROUND PRICE</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label"><b>â‚¹</b></span>
          <input
            type="text"
            class="form-control"
            id="price"
            placeholder="0.00"
            aria-label="price"
            aria-describedby="price-label"
            name="price"
            required
          />
          <div class="invalid-feedback">ðŸ™„</div>
          <div class="valid-feedback">LOOKS GOOD !</div>
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">DESCRIPTION</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="description"
          required
        ></textarea>
        <div class="invalid-feedback">ðŸ™„</div>
        <div class="valid-feedback">LOOKS GOOD !</div>
      </div>

      <div class="mb-3">
        <div class="form-file custom-file">
          <input
            type="file"
            class="form-file-input"
            id="image"
            name="image"
            required
            multiple
          />
          <label class="form-file-label" for="image">
            <span class="form-file-text custom-file-label"
              >Choose image(s)...</span
            >
            <span class="form-file-button">Browse</span>
          </label>
          <div class="invalid-feedback">ðŸ™„</div>
          <div class="valid-feedback">LOOKS GOOD !</div>
        </div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">ADD CAMPGROUND</button>
      </div>
    </form>
  </div>
</div>
